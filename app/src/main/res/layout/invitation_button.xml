<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invitationButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/inviteImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/inviteImage"
        android:layout_toRightOf="@+id/inviteImage"
        android:text="You've Been Invited To "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/inviteButtonGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="TextView"
        android:textSize="16sp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/inviteImage"
        android:layout_toRightOf="@+id/inviteImage"
        android:background="@color/colorWhiteish"
        android:text="Accept"
        android:textColor="@android:color/holo_green_light"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/confirmButton"
        android:layout_toRightOf="@+id/confirmButton"
        android:background="@color/colorWhiteish"
        android:text="Decline"
        android:textColor="@android:color/holo_red_dark"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>