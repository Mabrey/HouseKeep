<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background = "@drawable/rounded_button"
    android:padding = "5dp">

    <TextView
        android:id="@+id/choreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:text="Wash the Dishes"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/userResponsible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/choreName"
        android:layout_alignStart="@+id/choreName"
        android:layout_below="@+id/choreName"
        android:text="thelongestusername">

    </TextView>

    <TextView
        android:id="@+id/choreCompleteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choreName"
        android:layout_toEndOf="@id/userResponsible"
        android:layout_toRightOf="@+id/userResponsible"
        android:text="  4/22/2018">

    </TextView>
</RelativeLayout>