<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choreButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadowed_button"
    android:padding="5dp">

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/profilePicture"
        android:paddingHorizontal="5dp"
        android:text="Wash the Dishes"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/username_textfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name"
        android:layout_toEndOf="@+id/profilePicture"
        android:paddingHorizontal="5dp"
        android:text="thelongestusername"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/choreCompleteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name"
        android:layout_toEndOf="@+id/username_textfield"
        android:paddingHorizontal="5dp"
        android:text="5/5"
        android:textSize="16sp">

    </TextView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_profile" />

    <Button
        android:id="@+id/chore_click_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/member_name" />

</RelativeLayout>