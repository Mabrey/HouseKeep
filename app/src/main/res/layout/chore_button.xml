<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choreButtonLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadowed_button"
    android:padding="5dp">

    <TextView
        android:id="@+id/choreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:paddingHorizontal="5dp"
        android:text="Wash the Dishes"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:id="@+id/userResponsible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choreName"
        android:layout_toEndOf="@+id/imageView"
        android:paddingHorizontal="5dp"
        android:text="thelongestusername"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/choreCompleteTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choreName"
        android:layout_toEndOf="@+id/userResponsible"
        android:paddingHorizontal="5dp"
        android:text="5/5"
        android:textSize="16sp">

    </TextView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/choreCompleteTime"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_profile" />

</RelativeLayout>